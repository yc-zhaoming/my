<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background = "@drawable/mybackgroung">

   

    <TextView
        android:id="@+id/p2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/p1"
        android:layout_below="@+id/p1"
        android:layout_marginTop="24dp"
        android:background="@drawable/top_day"
        android:text="确认密码"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/top_day"
        android:gravity="center"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ps1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/p1"
        android:layout_alignBottom="@+id/p1"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/p1"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ps2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/ps1"
        android:layout_alignTop="@+id/p2"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ps2"
        android:layout_marginTop="93dp"
        android:text="确定" />

</RelativeLayout>